@using UserApp.ViewModels;
@model ChangePasswordViewModel;
@{
    ViewData["Title"] = "Login";
    Layout = "~/Views/Shared/_AccountLayout.cshtml";
}

<form asp-controller="Account" asp-action="ChangePassword" method="post">

    <div class="container text-danger" asp-validation-summary="ModelOnly"></div>
    <h1>UPDATE YOUR PASSWORD</h1>
    <hr>
    <div>
        <label><b>Email</b></label>
        <input asp-for="Email" type="text" placeholder="Enter Email" name="Email" readonly>
     
    </div>

    <div>
        <label><b>NewPassword</b></label>
        <input asp-for="NewPassword" type="password" placeholder="Enter New Password" name="NewPassword">
        <span asp-validation-for="NewPassword" class="text-danger"></span>
    </div>
    <div>
        <label><b>ConfirmNewPassword</b></label>
        <input asp-for="ConfirmNewPassword" type="password" placeholder="Confirm New Password" name="ConfirmNewPassword">
        <span asp-validation-for="ConfirmNewPassword" class="text-danger"></span>
    </div>

    <button type="submit">Submit</button>

    <div>
        <a asp-controller="Home" asp-action="Index">Back</a>
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
