@using UserApp.ViewModels;
@model RegisterViewModel;
@{
    // ViewData["Title"] = "Login";
    Layout = "~/Views/Shared/_AccountLayout.cshtml";
}

<form asp-controller="Account" asp-action="Register" method="post" >
    <div class="container text-danger" asp-validation-summary="ModelOnly"></div>
        <h1>REGISTER</h1>
        <p>Please fill in this form to create an account.</p>
        <hr>
        <div>
        <label asp-for="Name"><b>Name</b></label>
        <input asp-for="Name" type="text" placeholder="Enter Name" name="Name" id="Name">
        <span asp-validation-for="Name" class="text-danger"></span>
        </div>
       
        <div>
        <label asp-for="Email"><b>Email</b></label>
        <input asp-for="Email" type="text" placeholder="Enter Email" name="Email" id="Email">
        <span asp-validation-for="Email" class="text-danger"></span>
        </div>
        
        <div>
        <label asp-for="Password"><b>Password</b></label>
        <input asp-for="Password" type="password" placeholder="Enter Password" name="Password" id="Password">
        <span asp-validation-for="Password" class="text-danger"></span>
        </div>

        <div>
        <label asp-for="ConfirmPassword"><b>Confirm Password</b></label>
        <input asp-for="ConfirmPassword" type ="password" placeholder="Repeat Password" name="ConfirmPassword" id="ConfirmPassword">
        <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
        </div>

     
        <hr>

        <p>By creating an account you agree to our <a href="#">Terms & Privacy</a>.</p>
        <button type="submit" class="registerbtn">Register</button>
   
       <div class="container signin">
        <p>Already have an account? <a asp-controller="Account" asp-action="Login">Sign in</a>.</p>
       </div>
    <div>
        <a asp-controller="Home" asp-action="Index">Back</a>
    </div>
</form>